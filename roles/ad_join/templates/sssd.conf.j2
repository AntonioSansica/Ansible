[sssd]
domains = {{ ad_join_domain_name }}
config_file_version = 2
services = nss, pam

[domain/{{ ad_join_domain_name }}]
ad_domain = {{ ad_join_domain_name }}
krb5_realm = {{ ad_join_domain_name }}
realmd_tags = manages-system joined-with-samba
cache_credentials = False
id_provider = ad
ad_server = {{ ad_join_domain_address }}
ad_backup_server = {{ ad_join_domain_address_backup }}
krb5_store_password_if_offline = False
default_shell = /bin/bash
ldap_id_mapping = True
use_fully_qualified_names = False
fallback_homedir = /home/%u
access_provider = simple
simple_allow_groups = {{ ansible_hostname }}_LA
simple_allow_users = {{ ad_join_domain_admin }}